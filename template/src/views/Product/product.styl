$title = 1.6rem;
$paragraph = 1.4rem;

.product{
    margin-top: 50px;
    display: flex;
    font-size: $paragraph;
    .product_slider{
        width: 50%;

        .product_slider-carousel{
            box-shadow: none;
        }
    }

    .product_info{
        margin-left: 50px; 

        .product_info-title{
            font-size: $title;
        }
        .product_info-price{
            font-size: $title;
            color: #002c6e;
        }

        .product_info-descripition,
        .product_info-specifications{
            h3{
                font-size: $title;
            }    
        }
        
        .product_info-descripition{
            p{
                max-width: 500px;
            }
        }
    }
    
    .product_info-actions{
        button{
            background-color: #3f9b43;
            padding: 10px;   
            color: #fff;
            border-radius: 5px;
            box-shadow: 0 10px 20px rgba(0,0,0,0.25), 0 5px 5px rgba(0,0,0,0.22);
            &:hover{
                background-color: #147919    
            }
        }
    }
}




