.product-card-component{
    box-shadow: 0 7px 14px rgba(0,0,0,0.25), 0 5px 5px rgba(0,0,0,0.22);
    .product-card-component_content{
        padding: 1rem; 

        h3{
            font-size: 1.5rem;
            margin-bottom: 5px;
            a{
                color: #212121;
                text-decoration: none;

                &:hover{
                    color:#424242;    
                }
            }
        }

        h4{
            font-size: 1.4rem;
            color: #0288D1;
        }
    }

    .product-card-component_actions{
        padding: 1rem;
        button{
            background-color: #3f9b43;
            padding: 10px;   
            color: #fff;
            width: 100%;
            border-radius: 5px;
            font-size: 1.2rem;
            box-shadow: 0 5px 10px rgba(0,0,0,0.25), 0 2px 2px rgba(0,0,0,0.22);
            &:hover{
                background-color: #147919    
            }
        }
    }
}