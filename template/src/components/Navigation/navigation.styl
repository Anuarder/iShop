
.navigation{
    display: flex;
    justify-content: space-between;
    font-size: 1.3rem;
    padding: 1.5rem;
    line-height: 2rem;

    .navigation_logo{
        font-size: 2rem;
        font-weight: 800;
    
        a{
            text-decoration: none;
            color: black;
        }
    }
    
    .navigation_actions{
        display: flex;
        
        .search_input{
            outline: none;
            border-bottom: 1px solid #ddd;
           
            &:focus{
                border-bottom: 1px solid #e24647;
               
                &::-webkit-input-placeholder{
                    color: #e24647;
                }
            }
        }
    }
    .navigation_links{
        display: flex;
        
        div{
            margin-left: 5rem;
        }
        
        a{
            text-decoration: none;
            color: black;
            &:hover{
                color: #e24647;
            }
        }
    }
}